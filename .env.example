# ===========================================
# Kalam 2026 - Environment Configuration
# ===========================================

# -------------------------------------------
# General
# -------------------------------------------
NODE_ENV=development
# NODE_ENV=production

# -------------------------------------------
# Session
# -------------------------------------------
SESSION_SECRET=your-session-secret-min-32-chars-change-this-in-production

# -------------------------------------------
# Frontend (Next.js)
# -------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------------------
# Database (MongoDB)
# -------------------------------------------
MONGODB_URI=mongodb://mongodb:27017/kalam2026

# Password hashing (Argon2id)
ARGON2_MEMORY=32768
ARGON2_TIME=2
ARGON2_PARALLELISM=2

# -------------------------------------------
# Email (Google Workspace SMTP)
# -------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Transactional emails
SMTP_USER_PRODUCTS=products@siet.ac.in
SMTP_PASS_PRODUCTS=your-app-password-here

# Support emails
SMTP_USER_SUPPORT=support@siet.ac.in
SMTP_PASS_SUPPORT=your-app-password-here

# Default sender
SMTP_FROM_NAME="Kalam 2026"
SMTP_FROM_EMAIL=products@siet.ac.in

# -------------------------------------------
# Payments (PhonePe)
# -------------------------------------------
PHONEPE_MERCHANT_ID=your-merchant-id
PHONEPE_SALT_KEY=your-salt-key
PHONEPE_SALT_INDEX=1
PHONEPE_ENV=UAT
# PHONEPE_ENV=PRODUCTION
PHONEPE_CALLBACK_URL=https://yourdomain.com/api/payments/callback

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=60000

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_LEVEL=info
# LOG_LEVEL=debug

# -------------------------------------------
# Redis (Optional - for session/cache)
# -------------------------------------------
# REDIS_URL=redis://redis:6379